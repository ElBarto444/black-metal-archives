{% extends 'base.html.twig' %}

{% block title %}Album
{% endblock %}

{% block body %}
	<div class="pt-5 mt-5">
		<div class="container d-flex flex-column text-center align-items-center border border-primary rounded mb-4">
			<h1 class="mt-2 pt-5 pb-4">{{ album.albumTitle }}
				by
				{{ album.bandName.bandName }}</h1>

			<div class="container border rounded border-primary p-4 fs-5">
				<div class="row">
					<div class="col-6 text-center">
						<div>
							<img class="img my-5" style="height: 550px" src="{{ vich_uploader_asset(album, 'albumCoverFile') }}" alt="{{ album.albumCover }}">
						</div>
					</div>
					<div class="col-6 text-center">
						<div class="py-5"><img height="350" class="rounded" src="" alt=""></div>
						<div>
							<h4>Released
								{{ album.albumYear|date('d-M-y') }}</h4>
						</div>
						<div>
							<h4>Album title :
								{{ album.albumTitle }}</h4>
						</div>
						<div>
							<h4>Label :
								</h4>
						</div>
						<div>
							<h4>Release type :
								{{ album.albumType }}</h4>
						</div>
					</div>
				</div>
				<div class="border-top border-primary my-5">
					<h4 class="mt-3">Tracklist</h4>
				</div>
				{% for song in songTracklist %}
					<div>
						<ul class="ps-0">
							<li class="d-flex flex-row p-0 justify-content-between border-top border-primary">
								<p class="mb-0 mt-3">{{ song.songNumber }}</p>
								<p class="mb-0 mt-3">{{ song.songTitle }}</p>
								<p class="mb-0 mt-3">{{ song.songDuration|date('H:i') }}</p>
							</li>
						</ul>
					</div>
				{% else %}
					<p>{{ album.albumTitle }}
						has no known tracklist yet</p>
				{% endfor %}
				<div class="pt-3 border-top border-primary">
				<p>Updated
					{{ album.updatedAt ? album.updatedAt|date('Y-m-d H:i:s') : '' }}</p>
					</div>
			</div>
			<div class="my-5 mx-3 d-flex justify-content-around w-100">
				<a href="{{ path('app_band_show', {'id': band.id}) }}" type="button" class="btn border border-primary btn-lg">Return</a>
				<a href="{{ path('app_album_edit', {'id': album.id}) }}" type="button" class="btn border border-primary btn-lg">Edit album</a>
			</div>
		</div>
	</div>
{% endblock %}
