{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>AlbumTitle</th>
                <td>{{ album.albumTitle }}</td>
            </tr>
            <tr>
                <th>AlbumYear</th>
                <td>{{ album.albumYear ? album.albumYear|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>AlbumCover</th>
                <td>{{ album.albumCover }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ album.updatedAt ? album.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_album_index') }}">back to list</a>

    <a href="{{ path('app_album_edit', {'id': album.id}) }}">edit</a>

    {{ include('album/_delete_form.html.twig') }}
{% endblock %}
