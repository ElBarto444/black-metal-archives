{% extends 'base.html.twig' %}

{% block title %}New Album
{% endblock %}

{% block body %}
	<div class="pt-5 mt-5">
		<div class="container flex-column align-items-center border border-primary rounded">
			<h1 class="mt-2 pt-5 pb-2 text-center">Add a new Band</h1>

			{{ form_start(form) }}
			<div class="grid gap-3 column-gap-5 d-flex">
				<div class="col">
					<div class="py-4 px-4">
						{{ form_label(form.albumTitle) }}
						{{ form_widget(form.albumTitle) }}
					</div>
					<div class="py-4 px-4">
						{{ form_label(form.albumYear) }}
						{{ form_widget(form.albumYear) }}
					</div>
					<div class="py-4 px-4">
						{{ form_label(form.albumCoverFile) }}
						{{ form_widget(form.albumCoverFile) }}
					</div>
				</div>
				<div class="col">
					<div class="py-4 px-4">
						{{ form_label(form.bandName) }}
						{{ form_widget(form.bandName) }}
					</div>
				</div>
			</div>
			<button type="submit" class="btn border border-primary color-primary-light btn-lg my-5 pb-1">
				{{ button_label|default('Submit') }}
			</button>
			{{ form_end(form) }}

			<a href="{{ path('app_album_index') }}">back to list</a>
		</div>
	</div>
{% endblock %}
