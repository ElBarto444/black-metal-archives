{% extends 'base.html.twig' %}

{% block title %}Song index{% endblock %}

{% block body %}
    <h1>Song index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>SongTitle</th>
                <th>SongNumber</th>
                <th>SongDuration</th>
                <th>SongLyrics</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for song in songs %}
            <tr>
                <td>{{ song.id }}</td>
                <td>{{ song.songTitle }}</td>
                <td>{{ song.songNumber }}</td>
                <td>{{ song.songDuration ? song.songDuration|date('H:i:s') : '' }}</td>
                <td>{{ song.songLyrics }}</td>
                <td>
                    <a href="{{ path('app_song_show', {'id': song.id}) }}">show</a>
                    <a href="{{ path('app_song_edit', {'id': song.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_song_new') }}">Create new</a>
{% endblock %}
