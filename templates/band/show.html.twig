{% extends 'base.html.twig' %}

{% block title %}Band
{% endblock %}

{% block body %}
	<div class="pt-5 mt-5">
		<div class="container d-flex flex-column align-items-center border border-primary rounded mb-4">
			<h1 class="mt-2 pt-5 pb-4">{{ band.bandName }}</h1>

			<div class="container d-flex flex-column">
				<div class="grid border rounded border-primary d-flex p-4">
					<div class="col-6 text-center">
						<div class="py-5"><img height="350" src="{{ vich_uploader_asset(band, 'bandLogoFile') }}" alt="{{ band.bandLogo }}"></div>
						<div>
							<h4>Band name</h4>
							<p>{{ band.bandName }}</p>
						</div>
						<div>
							<h4>Genre</h4>
							<p>{{ band.bandGenre }}</p>
						</div>
					</div>
					<div class="col-6 text-center">
						<div class="py-5"><img height="350" src="{{ vich_uploader_asset(band, 'bandPictureFile') }}" alt="{{ band.bandPicture }}"></div>
						<div>
							<h4>Country</h4>
							<p>{{ band.bandCountry }}</p>
						</div>
						<div>
							<h4>Year of formation</h4>
							<p>{{ band.bandYear }}</p>
						</div>
					</div>
				</div>
				<div class="my-5 mx-3 d-flex justify-content-between align-item-center">
					<a href="{{ path('app_band_index') }}" type="button" class="btn border border-primary btn-lg">Return</a>
					<a href="{{ path('app_band_edit', {'id': band.id}) }}" type="button" class="btn border border-primary btn-lg">Edit band</a>
					{{ include('band/_delete_form.html.twig') }}
				</div>
			{% endblock %}
