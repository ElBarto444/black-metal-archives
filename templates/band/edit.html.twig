{% extends 'base.html.twig' %}

{% block title %}Edit Band
{% endblock %}

{% block body %}
	<div class="pt-5 mt-5">
		<div class="container flex-column align-items-center border border-primary rounded">
			<h1 class="mt-2 pt-5 pb-2 text-center">Edit current band</h1>

			{{ form_start(form) }}
			<div class="grid gap-3 column-gap-5 d-flex">
				<div class="col">
					<div class="py-4 px-4">
						{{ form_label(form.bandName) }}
						{{ form_widget(form.bandName) }}
					</div>
					<div class="py-4 px-4">
						{{ form_label(form.bandCountry) }}
						{{ form_widget(form.bandCountry) }}
					</div>
					<div class="py-4 px-4">
						{{ form_label(form.bandYear) }}
						{{ form_widget(form.bandYear) }}
					</div>
				</div>
				<div class="col">
					<div class="py-4 px-4">
						{{ form_label(form.bandGenre) }}
						{{ form_widget(form.bandGenre) }}
					</div>
					<div class="py-4 px-4">
						{{ form_label(form.bandLogoFile) }}
						{{ form_widget(form.bandLogoFile) }}
					</div>
					<div class="py-4 px-4">
						{{ form_label(form.bandPictureFile) }}
						<div class="d-flex flex-row w-100 no-wrap">
							<div>
								{{ form_widget(form.bandPictureFile) }}
							</div>
						</div>
					</div>
				</div>
			</div>
			<button type="submit" class="btn border border-primary color-primary-light btn-lg my-5 pb-1">
				{{ button_label|default('Submit') }}
			</button>
			<a role="button" class="btn border border-primary color-primary-light btn-lg my-5 pb-1" href="{{ path('app_band_show', {'id': band.id}) }}">Return</a>
            <a role="button" class="btn border border-primary color-primary-light btn-lg my-5 pb-1" href="{{ path('app_album_new', {'id': band.id}) }}">Add an album</a>

			{{ include('band/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
